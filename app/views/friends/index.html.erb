





<% content_for :title, "Friends" %>


<table class="table table-striped table-bordered table-hover my-4">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th>User Id</th>
      <th colspan="1"></th>
    </tr>
  </thead>
  <tbody> 
    <% @friends.each do |friend| %>
    <% if friend.user == current_user %>
      <tr id="<%= dom_id friend %>">
        <td>
          <%= link_to "#{friend.first_name} #{friend.last_name}", friend %> 
        </td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.twitter %></td>
        <td><%= friend.user_id %></td>
        <td>
          <%= link_to "Delete", friend, method: :delete, data: { confirm: "Are you sure?"}, class:"btn btn-outline-danger btn-sm"  %>
        </td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<%= link_to "New friend", new_friend_path, class:"btn btn-primary" %>


